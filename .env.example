# Google OAuth - Google OAuth 2.0 client for one-click auth
GOOGLE_CLIENT_ID=
VITE_GOOGLE_CLIENT_ID= # Frontend Google OAuth Client ID

# Lenco Payment Gateway
LENCO_PUBLIC_KEY= # Lenco publishable key used by the inline checkout widget
LENCO_SECRET_KEY= # Lenco secret/API token used on the server for verification
LENCO_API_BASE=https://api.lenco.co/access/v2 # Lenco API base URL (defaults when unset)
LENCO_WIDGET_URL= # Inline widget script URL (defaults to Lenco's when unset)
LENCO_WITHDRAW_SOURCE_ACCOUNT_ID= # Optional source account for triggering payouts via the API
LENCO_ENV=production # Optional override (`sandbox` or `production`)
LENCO_USE_MOCK_GATEWAY= # Set to `true` to simulate checkout locally without live keys

# Application Configuration
VITE_API_BASE_URL=http://localhost:4000 # URL of the Express backend (production: https://vibelyapp.live/api)
CLIENT_ORIGIN=http://localhost:3000,http://localhost:4000 # Origins allowed for CORS (production: https://vibelyapp.live,https://www.vibelyapp.live)
PORT=4000 # Port for the backend server
JSON_BODY_LIMIT=1mb # Maximum size of JSON request body

# Database (currently using JSON files)
USERS_DATA_FILE=data/users.json

# Security
JWT_SECRET=your_jwt_secret_key_here # Secret key for JWT tokens